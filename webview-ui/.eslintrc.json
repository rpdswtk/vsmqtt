{
  "env": {
    "browser": true
  },
  "extends": ["plugin:svelte/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "extraFileExtensions": [".svelte"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      },
      "rules": {
        "svelte/valid-compile": ["error", { "ignoreWarnings": true }]
      }
    }
  ],
  "rules": {
    "prettier/prettier": 0
  }
}
